<script id="ia_cleanup_once">
(function(){
  document.addEventListener("DOMContentLoaded", ()=>{
    const filters=[...document.querySelectorAll("#plantFilter")];
    filters.slice(1).forEach(n=>n.remove()); // keep only the first
  });
})();
</script>

<style id="hide-legacy-plant">
  select#plantSelect, select#plants, select#meterPlantSelect { display:none !important; }
</style>
<script id="ia-multiplant">
(function(){
  const $  = (s,d=document)=>d.querySelector(s);
  const $$ = (s,d=document)=>[...d.querySelectorAll(s)];
  const btn   = $("#plantBtn");
  const panel = $("#plantPanel");
  const list  = $("#plantList");
  const allCb = $("#plant_all");
  const apply = $("#plantApply");

  let PLANTS = [];
  let SELECTED = new Set(); // empty or "all" => all plants

  function labelFromSel(){
    if (!SELECTED.size || SELECTED.size===PLANTS.length) return "All Plants ▾";
    if (SELECTED.size===1){
      const id=[...SELECTED][0];
      const p=PLANTS.find(x=>x.id===id);
      return (p?.name||"1 selected")+" ▾";
    }
    return `${SELECTED.size} selected ▾`;
  }

  async function loadPlants(){
    const r = await fetch("/api/GetPlantDirectory?_ts="+Date.now());
    const j = await r.json();
    if(!j.success || !Array.isArray(j.data)) throw new Error("plant list failed");
    PLANTS = j.data.map(p=>({ id:String(p.Plant_ID), name:p.Plant_Name }));
    list.innerHTML = PLANTS.map(p=>`
      <label style="display:flex;align-items:center;gap:.5rem;padding:.25rem .5rem;">
        <input type="checkbox" class="plant_cb" value="${p.id}" checked>
        <span>${p.name}</span>
      </label>`).join("");
  }

  async function loadAnalytics(){
    // infer current view + date
    let view = "day";
    const active = document.querySelector(".btn.active, .active");
    if (active && /week/i.test(active.textContent)) view="week";
    else if (active && /month/i.test(active.textContent)) view="month";
    else if (active && /year/i.test(active.textContent)) view="year";

    const dateInp = document.querySelector('input[type="date"], input[name="date"]');
    const date = dateInp ? dateInp.value : new Date().toISOString().slice(0,10);

    const useAll = (!SELECTED.size || SELECTED.size===PLANTS.length);
    const plantParam = useAll ? "all" : [...SELECTED].join(",");
    const url = `/api/inverter-analytics-sql?view=${encodeURIComponent(view)}&plantId=${encodeURIComponent(plantParam)}&date=${encodeURIComponent(date)}&_ts=${Date.now()}`;
    const res = await fetch(url);
    const data = await res.json();

    // KPI: sum of yield (MWh auto -> GWh)
    const totalMWh = Array.isArray(data?.yield) ? data.yield.reduce((s,r)=>s+(+r.value||0),0) : 0;
    const unit = totalMWh>=1000 ? "GWh" : "MWh";
    const shown = totalMWh>=1000 ? (totalMWh/1000) : totalMWh;

    const kpiVal = document.querySelector("#kpi_total_yield, .kpi-total-yield .value, [data-kpi='total-yield']");
    const kpiUni = document.querySelector("#kpi_total_yield_unit, .kpi-total-yield .unit, [data-kpi='total-yield-unit']");
    if (kpiVal) kpiVal.textContent = (+shown).toFixed(3);
    if (kpiUni) kpiUni.textContent = unit;

    // simple fallbacks: draw minimal SVG lines if page doesn't have chart fns
    const power = Array.isArray(data?.power) ? data.power : []; // [{t,ac,dc}]
    drawLine("#powerChart,[data-chart='power']", [
      {series: power.map(p=>({x:new Date(p.t), y:+(p.ac||0)}))},
      {series: power.map(p=>({x:new Date(p.t), y:+(p.dc||0)}))}
    ]);
    const yld = Array.isArray(data?.yield) ? data.yield : []; // [{label,value}]
    drawLine("#yieldChart,[data-chart='yield']", [
      {series: yld.map(d=>({x:d.label, y:+(d.value||0)}))}
    ]);

    function drawLine(sel, seriesArr){
      const host = document.querySelector(sel.split(',')[0]) || document.querySelector(sel.split(',')[1]);
      if (!host) return;
      const W=host.clientWidth||640, H=host.clientHeight||280, pad=24;
      host.innerHTML="";
      const svgNS="http://www.w3.org/2000/svg";
      const svg=document.createElementNS(svgNS,"svg"); svg.setAttribute("width",W); svg.setAttribute("height",H); host.appendChild(svg);
      const allY = seriesArr.flatMap(s=>s.series.map(p=>p.y));
      const maxY = Math.max(1, ...allY, 1);
      const n    = Math.max(...seriesArr.map(s=>s.series.length));
      const x = (i)=> pad + (W-2*pad) * (n<=1?0.5:i/(n-1));
      const y = (v)=> H-pad - (H-2*pad)*(v/maxY);
      seriesArr.forEach((S, idx)=>{
        const pts = S.series.map((p,i)=>`${x(i)},${y(p.y)}`).join(" ");
        const poly=document.createElementNS(svgNS,"polyline");
        poly.setAttribute("points", pts);
        poly.setAttribute("fill","none");
        poly.setAttribute("stroke", idx? "#27ae60" : "#2f80ed");
        poly.setAttribute("stroke-width","2");
        svg.appendChild(poly);
      });
    }
  }

  // UI
  btn?.addEventListener("click", ()=> panel.hidden = !panel.hidden);
  allCb?.addEventListener("change", (e)=> $$(".plant_cb", panel).forEach(cb=>cb.checked=e.target.checked));
  $("#plantApply")?.addEventListener("click", ()=>{
    const chosen = $$(".plant_cb", panel).filter(cb=>cb.checked).map(cb=>cb.value);
    SELECTED = new Set(chosen);
    btn.textContent = labelFromSel(); panel.hidden = true;
    loadAnalytics().catch(console.warn);
  });
  document.addEventListener("click", (e)=>{ if(panel && !panel.contains(e.target) && e.target!==btn) panel.hidden=true; });

  // boot
  document.addEventListener("DOMContentLoaded", ()=>{
    loadPlants().then(()=>{ SELECTED.clear(); btn.textContent = labelFromSel(); loadAnalytics(); })
                .catch(console.warn);
  });
})();
</script>









