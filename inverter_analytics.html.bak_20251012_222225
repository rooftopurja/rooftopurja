  // Route all relative /api/* to local Functions (7071)
  (function(){
    const API_BASE = "http://127.0.0.1:7071";
    const _fetch = window.fetch;
    window.fetch = (u,o)=> (typeof u==="string" && u.startsWith("/api/"))
      ? _fetch(API_BASE + u, o) : _fetch(u,o);
  })();
</script>
