{
  "navigationFallback": {
    "rewrite": "/login.html",
    "exclude": ["/api/*"]
  },
  "routes": [
    {
      "route": "/login",
      "rewrite": "/login.html"
    },
    {
      "route": "/logout",
      "redirect": "/login.html"
    },

    /* ðŸ”“ PUBLIC AUTH APIs */
    {
      "route": "/api/SendOtp",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/VerifyOtp",
      "allowedRoles": ["anonymous"]
    },

    /* ðŸ”’ ALL OTHER APIs REQUIRE LOGIN */
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    }
  ]
}
