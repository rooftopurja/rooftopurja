{
  "navigationFallback": {
    "rewrite": "/login.html",
    "exclude": [
      "/api/*",
      "/.auth/*"
    ]
  },
  "routes": [
    {
      "route": "/login",
      "rewrite": "/login.html"
    },

    /* üîì OTP APIs MUST BE PUBLIC */
    {
      "route": "/api/SendOtp",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/VerifyOtp",
      "allowedRoles": ["anonymous"]
    },

    /* üîê PROTECT EVERYTHING ELSE */
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ]
}
